<main class="user-form">
  <div class="tab-active"><%= t('sessions.login') %></div>
  <%= link_to t('users.sign_up'), signup_url, class: "tab-inactive" %>

  <% if flash['form_error'] %>
    <div class="form-error"><%= flash[:form_error] %></div>
  <% end %>

  <%= form_for :session, url: login_path do |f| %>
    <%= f.email_field :email,
      required: true, placeholder: t('activerecord.attributes.user.email'), autofocus: true
    %>
    <%= f.password_field :password, required: true, placeholder: t('activerecord.attributes.user.password') %>
    <%= f.submit t('.login') %>
  <% end %>
</main>
