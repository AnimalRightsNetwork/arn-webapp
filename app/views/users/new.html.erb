<h1><%= t('users.signup') %></h1>


<%= form_for @user, url: signup_path do |f| %>
  <%# Show filtered error messages %>
  <% if @user.has_filtered_errors? %>
    <ul>
      <% @user.full_error_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :display_id %><br />
  <%= f.text_field :display_id, pattern: '[A-Za-z0-9]{5,25}', title: t('.id_title') %><br />
  <br />
  <%= f.label :email %><br />
  <%= f.email_field :email %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password, pattern: '(?=.*[A-Z])(?=.*[a-z])(?=.*[0-9]).{8,64}', title: t('.password_title') %><br />
  <br />
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %><br />
  <br />
  <%= f.submit t('.signup') %>
<% end %>
